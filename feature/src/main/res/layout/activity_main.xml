<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:id="@+id/viewAll">
    <TextView android:layout_width="match_parent"
                  android:layout_height="180dp"
                  android:id="@+id/result_text"
    />
    <RelativeLayout android:layout_width="match_parent" android:layout_height="330dp" android:id="@+id/buttonLayout">
            <android.support.v7.widget.AppCompatButton android:layout_width="80dp"
                                                       android:layout_height="80dp"
                                                       android:text="@string/seven"
                                                       android:id="@+id/seven_button"
            />
            <android.support.v7.widget.AppCompatButton android:layout_width="80dp"
                                                       android:layout_height="80dp"
                                                       android:text="@string/eight"
                                                       android:id="@+id/eight_button"
                                                       android:layout_marginLeft="90dp"
            />
            <android.support.v7.widget.AppCompatButton android:layout_width="80dp"
                                                       android:layout_height="80dp"
                                                       android:text="@string/nine"
                                                       android:id="@+id/nine_button"
                                                       android:layout_marginLeft="180dp"
            />
            <android.support.v7.widget.AppCompatButton android:layout_width="80dp"
                                                       android:layout_height="80dp"
                                                       android:text="@string/delete_sign"
                                                       android:id="@+id/del_button"
                                                       android:layout_marginStart="270dp"
            />
        <android.support.v7.widget.AppCompatButton android:layout_width="80dp"
                                                   android:layout_height="80dp"
                                                   android:text="@string/four"
                                                   android:id="@+id/four_button"
                                                   android:layout_marginTop="90dp"
        />
        <android.support.v7.widget.AppCompatButton android:layout_width="80dp"
                                                   android:layout_height="80dp"
                                                   android:text="@string/five"
                                                   android:id="@+id/five_button"
                                                   android:layout_marginTop="90dp"
                                                   android:layout_marginStart="90dp"
        />
        <android.support.v7.widget.AppCompatButton android:layout_width="80dp"
                                                   android:layout_height="80dp"
                                                   android:text="@string/six"
                                                   android:id="@+id/six_button"
                                                   android:layout_marginTop="90dp"
                                                   android:layout_marginStart="180dp"
        />
        <android.support.v7.widget.AppCompatButton android:layout_width="80dp"
                                                   android:layout_height="80dp"
                                                   android:text="@string/add_sign"
                                                   android:id="@+id/add_button"
                                                   android:layout_marginTop="90dp"
                                                   android:layout_marginStart="270dp"
        />
        <android.support.v7.widget.AppCompatButton android:layout_width="80dp"
                                                   android:layout_height="80dp"
                                                   android:text="@string/one"
                                                   android:id="@+id/one_button"
                                                   android:layout_marginTop="170dp"
        />
        <android.support.v7.widget.AppCompatButton android:layout_width="80dp"
                                                   android:layout_height="80dp"
                                                   android:text="@string/two"
                                                   android:id="@+id/two_button"
                                                   android:layout_marginTop="170dp"
                                                   android:layout_marginStart="90dp"
        />
        <android.support.v7.widget.AppCompatButton android:layout_width="80dp"
                                                   android:layout_height="80dp"
                                                   android:text="@string/three"
                                                   android:id="@+id/three_button"
                                                   android:layout_marginTop="170dp"
                                                   android:layout_marginStart="180dp"
        />
        <android.support.v7.widget.AppCompatButton android:layout_width="80dp"
                                                   android:layout_height="80dp"
                                                   android:text="@string/subtract_sign"
                                                   android:id="@+id/subtract_button"
                                                   android:layout_marginTop="170dp"
                                                   android:layout_marginStart="270dp"
        />
        <android.support.v7.widget.AppCompatButton android:layout_width="80dp"
                                                   android:layout_height="80dp"
                                                   android:text="@string/fact"
                                                   android:id="@+id/fact_button"
                                                   android:layout_marginTop="255dp"
        />
        <android.support.v7.widget.AppCompatButton android:layout_width="80dp"
                                                   android:layout_height="80dp"
                                                   android:text="@string/zero"
                                                   android:id="@+id/zero_button"
                                                   android:layout_marginTop="255dp"
                                                   android:layout_marginStart="90dp"
        />
        <android.support.v7.widget.AppCompatButton android:layout_width="80dp"
                                                   android:layout_height="80dp"
                                                   android:text="@string/result_sign"
                                                   android:id="@+id/result_button"
                                                   android:layout_marginTop="255dp"
                                                   android:layout_marginStart="180dp"
        />
        <android.support.v7.widget.AppCompatButton android:layout_width="80dp"
                                                   android:layout_height="80dp"
                                                   android:text="@string/multiply_sign"
                                                   android:id="@+id/multiply_button"
                                                   android:layout_marginTop="255dp"
                                                   android:layout_marginStart="270dp"
        />
    </RelativeLayout>
</LinearLayout>